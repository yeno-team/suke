{
	"ts-node": {
		"files": true
	},
	"extends": "../../tsconfig.build.json",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
        "lib": ["ESNext", "DOM","DOM.Iterable"]
	},
	"references": [{
			"path": "../suke-util"
		},
		{
			"path": "../suke-core"
		},
