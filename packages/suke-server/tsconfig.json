{
  "ts-node": {
    "files": true
  },
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
	  "baseUrl": "./",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
	  "composite": true,
    "downlevelIteration": true
  },
  "references": [
    {
      "path": "../parsers"
    },
    {
      "path": "../suke-core"
    },
    {
      "path": "../suke-util"
    },
    {
      "path": "../wrappers"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
}