{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "composite": true,
    "downlevelIteration": true
  },
  "references": [
    {
      "path": "../parsers"
    },
    {
      "path": "../suke-core"
    }
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}